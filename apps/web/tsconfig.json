{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "@simple-todo/shared": ["../../packages/shared/src"],
      "@simple-todo/shared/*": ["../../packages/shared/src/*"]
    },
    "outDir": "./dist",
    "composite": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["vite.config.ts"],
  "references": [{ "path": "../../packages/shared" }]
}
